%h1 Product: #{@product.name}
%table
    %tr
        %td ID:
        %td=@product.id
    %tr
        %td Hash:
        %td=@product.product_hash 
    %tr
        %td Label:
        %td=@product.label         
    %tr
        %td Attributes:
    -@product.product_attributes.each do |attr|
        %tr
            %td
            %td= attr.name
            %td= attr.value
    - if @product.childProducts.size > 0
        %tr
            %td Sub Products    
        %tr
            %td
            %td
            %td=render :partial => "products/product_list", :locals => {:products => @product.childProducts} 
    - if @product.enabledContent.size > 0
        %tr
            %td Enabled Content   
        %tr
            %td
            %td
            %td=render :partial => "products/content_list", :locals => {:contents => @product.enabledContent}    
    - if @product.content.size > 0
        %tr
            %td Content   
        %tr
            %td
            %td
            %td=render :partial => "products/content_list", :locals => {:contents => @product.content}   
    %tr
        %td=link_to 'Back', :back