%h3 Consumer #{@consumer.uuid}

#consumerInfo
  %h3
    %a{:href=>'#'}
      General
  %div
    %table
      %tr
        %th Name
        %td= @consumer.name
      %tr
        %th Id
        %td= @consumer.id
      %tr
        %th Type
        %td= @consumer.type_label        
      %tr
        %th uuid
        %td= @consumer.uuid            
      %tr
        %th Username
        %td= @consumer.username
      %tr
        %th Created
        %td= @consumer.created      
      %tr
        %th Created
        %td= @consumer.updated 
  %h3
    %a{:href=>'#'}
      Certificates
  %div
    %p
      %a{:href=>"#", :onclick => "certDialog('Identity Certificate', '#{@consumer.uuid}');"}
        Identity Certitifcate
    %p
      %a{:href=>"#", :onclick => "pKeyDialog('Private Key', '#{@consumer.idCert.key.dump}');"}
        Private Key    
        
        
:javascript
  $("#consumerInfo").accordion({
    fillSpace: true
  });
  $("#consumerInfo").resizable({
    resize: function() {
      $("#consumerInfo").accordion("resize");
    },
    minHeight: 140
  });
        